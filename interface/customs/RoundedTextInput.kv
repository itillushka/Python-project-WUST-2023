<RoundedTextInput@TextInput>:
    background_color: (1, 1, 1, 0)  # Transparent background
    canvas.before:
        Color:
            rgba: self.background_color if self.background_color else (1, 1, 1, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [15]
